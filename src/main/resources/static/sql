drop table if exists member CASCADE;
create table member
(
 id bigint generated by default as identity,
 user_id varchar(15),
 user_pw varchar(15),
 name varchar(15),
 primary key (id)
);


create table board
(
    board_id bigint generated by default as identity,
    title varchar(25),
    writer varchar (15),
    contents varchar(255),
    register_date varchar(15),
    update_date varchar(15),
    primary key (board_id)
);


create table comments
(
    comment_id bigint generated by default as identity,
    writer_id varchar(25),
    comment_register_date varchar (15),
    comment_contents varchar(255),
    board_id int(5),
    primary key (comment_id)
);
ALTER TABLE comments ADD FOREIGN KEY(BOARD_ID) REFERENCES board(BOARD_ID)